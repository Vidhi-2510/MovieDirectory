<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.MovieDetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetid"
        android:layout_width="368dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.031"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/movieimgDet"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@color/design_default_color_primary_dark"
            android:padding="5dp">

        </ImageView>
        <TextView
            android:id="@+id/TitleDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/movieimgDet"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:text="Title"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/releaseDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/movieimgDet"
            android:layout_below="@+id/TitleDet"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:text="Release"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/catDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/releaseDet"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/movieimgDet"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:text="Category"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/runtimeDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catDet"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/movieimgDet"
            android:padding="5dp"
            android:paddingLeft="7dp"
            android:text="RunTime"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/DirectorDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/runtimeDet"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/movieimgDet"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="Director"
            android:textSize="17sp">

        </TextView>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetmore"
        android:layout_width="368dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.031"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ActorDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingLeft="18dp"
                android:textStyle="bold"
                android:text="Actor"
                android:textSize="17sp">

            </TextView>
            <TextView
                android:id="@+id/PlotDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@+id/ActorDet"
                android:paddingLeft="18dp"
                android:textStyle="bold"
                android:text="Plot"
                android:textSize="17sp">

            </TextView>
            <TextView
                android:id="@+id/WriterDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingLeft="18dp"
                android:textStyle="bold"
                android:text="Writer"
                android:layout_below="@+id/PlotDet"
                android:textSize="17sp">

            </TextView>
            <TextView
                android:id="@+id/RatingDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingLeft="18dp"
                android:textStyle="bold"
                android:text="Ratings"
                android:layout_below="@+id/WriterDet"
                android:textSize="17sp">

            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>